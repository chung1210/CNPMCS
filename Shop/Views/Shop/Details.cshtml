@model  ShopDegreyConnection.SanPham
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<!-- breadcrumb -->
<div class="bread-crumb bgwhite flex-w p-l-52 p-r-15 p-t-30 p-l-15-sm">
    <a href="index.html" class="s-text16">
        @Html.ActionLink("TRANG CHỦ", "Index", "Home")
        <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
    </a>

    <a href="product.html" class="s-text16">
        @Html.ActionLink("SẢN PHẨM", "Index", "Shop")
        <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
    </a>

    @*<a href="#" class="s-text16">

            <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
        </a>*@

    <span class="s-text17">
        @Model.TenSanPham
    </span>
</div>

<!-- Product Detail -->
<div class="container bgwhite p-t-35 p-b-80">
    <div class="flex-w flex-sb">
        <div class="w-size13 p-t-30 respon5">
            <div class="wrap-slick3 flex-sb flex-w">
                <div class="wrap-slick3-dots"></div>
                <div class="slick3">
                    <div class="item-slick3" data-thumb="/Asset/images/@Model.Hinh">
                        <div class="hov-img-zoom">
                            <img style="max-width:500px;max-height:600px;" src="~/Asset/images/@Model.Hinh" />
                           
                        </div>
                    </div>

                    <div class="item-slick3" data-thumb="/Asset/images/@Model.Hinh1">
                        <div class="wrap-pic-w">
                            <img src="~/Asset/images/@Model.Hinh1" alt="IMG-PRODUCT">
                        </div>
                    </div>

                    <div class="item-slick3" data-thumb="/Asset/images/@Model.Hinh2">
                        <div class="wrap-pic-w">
                            <img src="~/Asset/images/@Model.Hinh2" alt="IMG-PRODUCT">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="w-size14 p-t-30 respon5">
            <h4 class="product-detail-name m-text16 p-b-13">
                @Model.TenSanPham
            </h4>
            <span class="m-text17">
                @string.Format("{0:0,000 VNĐ}", Convert.ToDecimal(Model.Gia))
            </span>
            <div class="masanpham">
                Lượt xem: @Model.LuotXem
            </div>
            <div class="flex-m flex-w p-b-10">
                <div class="s-text15 w-size15 t-left">
                    Size:
                </div>

                <div class="rs2-select2 rs3-select2 rs4-select2 bo4 of-hidden w-size21 m-t-8 m-b-12">
                    <select class="selection-2" name="size">
                        <option>Size S</option>
                        <option>Size M</option>
                        <option>Size L</option>
                        <option>Size XL</option>
                    </select>
                </div>
            </div>
            <!--  -->
            <div class="p-t-33 p-b-60">
                <div class="flex-r-m flex-w p-t-10">
                    <div class="w-size16 flex-m flex-w">
                        @using (Html.BeginForm("Them", "GioHang", FormMethod.Post))
                        {


                            <input type="hidden" name="tensanpham" value="@Model.TenSanPham" />
                            <input type="hidden" name="masanpham" value="@Model.MaSanPham" />

                            <input type="hidden" name="gia" value="@Model.Gia" />
                            <div class="flex-w bo5 of-hidden m-r-22 m-t-10 m-b-10">
                                <button class="btn-num-product-down color1 flex-c-m size7 bg8 eff2">
                                    <i class="fs-12 fa fa-minus" aria-hidden="true"></i>
                                </button>
                                <input type="number" class="size8 m-text18 t-center num-product" value="1" min="1" max="1000" name="soluong" />
                                <button class="btn-num-product-up color1 flex-c-m size7 bg8 eff2">
                                    <i class="fs-12 fa fa-plus" aria-hidden="true"></i>
                                </button>
                            </div>

                                if (User.Identity.IsAuthenticated)
                                {
                                <input type="submit" class="flex-c-m size2 bg1 hov1 s-text1 trans-0-4" value="Thêm vào giỏ hàng">

                                }
                                else
                                {
                                <span>Đăng nhập để đặt hàng</span>
                                }
                         }
                            </div>
                        </div>
            </div>


            <!--  -->
            <div class="wrap-dropdown-content bo6 p-t-15 p-b-14 active-dropdown-content">
                <h5 class="js-toggle-dropdown-content flex-sb-m cs-pointer m-text19 color0-hov trans-0-4">
                    Mô tả sản phẩm
                    <i class="down-mark fs-12 color1 fa fa-minus dis-none" aria-hidden="true"></i>
                    <i class="up-mark fs-12 color1 fa fa-plus" aria-hidden="true"></i>
                </h5>

                <div class="dropdown-content dis-none p-t-15 p-b-23">
                    <p class="s-text8">
                        @Model.ChiTietSanPham
                    </p>
                </div>
            </div>

            <div class="wrap-dropdown-content bo7 p-t-15 p-b-14">
                <h5 class="js-toggle-dropdown-content flex-sb-m cs-pointer m-text19 color0-hov trans-0-4">
                    Tình Trạng Sản Phẩm
                    <i class="down-mark fs-12 color1 fa fa-minus dis-none" aria-hidden="true"></i>
                    <i class="up-mark fs-12 color1 fa fa-plus" aria-hidden="true"></i>
                </h5>

                <div class="dropdown-content dis-none p-t-15 p-b-23">
                    <p class="s-text8">
                     @Model.GhiChu
                    </p>
                </div>
            </div>

            <div class="wrap-dropdown-content bo7 p-t-15 p-b-14">
                <h5 class="js-toggle-dropdown-content flex-sb-m cs-pointer m-text19 color0-hov trans-0-4">
                    Reviews (0)
                    <i class="down-mark fs-12 color1 fa fa-minus dis-none" aria-hidden="true"></i>
                    <i class="up-mark fs-12 color1 fa fa-plus" aria-hidden="true"></i>
                </h5>

                <div class="dropdown-content dis-none p-t-15 p-b-23">
                    <p class="s-text8">
                        Fusce ornare mi vel risus porttitor dignissim. Nunc eget risus at ipsum blandit ornare vel sed velit. Proin gravida arcu nisl, a dignissim mauris placerat
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_Related", Shop.Models.BUS.ShopBUS.Related(Model.MaSanPham))
@Html.Partial("_Latest", Shop.Models.BUS.ShopBUS.Latest(Model.MaSanPham, ViewData["latest"].ToString()))

<!-- Back to top -->
<div class="btn-back-to-top bg0-hov" id="myBtn">
    <span class="symbol-btn-back-to-top">
        <i class="fa fa-angle-double-up" aria-hidden="true"></i>
    </span>
</div>

<!-- Container Selection -->
<div id="dropDownSelect1"></div>
<div id="dropDownSelect2"></div>



