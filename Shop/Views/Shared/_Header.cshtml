@model IEnumerable<ShopDegreyConnection.GioHang>


<!-- Header -->
<header class="header1">
    <!-- Header desktop -->
    <div class="container-menu-header">
        <div class="topbar">
            <div class="topbar-social">
                <a href="#" class="topbar-social-item fa fa-facebook"></a>
                <a href="#" class="topbar-social-item fa fa-instagram"></a>
                <a href="#" class="topbar-social-item fa fa-pinterest-p"></a>
                <a href="#" class="topbar-social-item fa fa-snapchat-ghost"></a>
                <a href="#" class="topbar-social-item fa fa-youtube-play"></a>
            </div>
        
            @*<span class="topbar-child1">
            Miễn phí vận chuyển cho đơn hàng trên 500.000đ
        </span>*@
            <div class="search-product pos-relative bo4 of-hidden">

                <form class="form-search" action="~/TimKiem/KetQuaTimKiem">
                    <input type="hidden" value="" name="MaLoaiSanPham" />
                    <input type="text" class="s-text7 size1 p-l-20 p-r-50" name="timkiem" placeholder="Tìm Kiếm ...">
                    <button class="flex-c-m size5 ab-r-m color2 color0-hov trans-0-4">
                        <i class="fs-12 fa fa-search" aria-hidden="true"></i>
                    </button>
                </form>
            </div>


        </div>

        <div class="wrap_header">
            <!-- Logo -->
            <a href="/Home"
               class="logo">
                <img src="~/Asset/images/degrey.png" width="100" height="20" alt="IMG-LOGO">
            </a>

            <!-- Menu -->
            <div class="wrap_menu">
                <nav class="menu">
                    <ul class="main_menu">
                        <li>
                            @Html.ActionLink("TRANG CHỦ", "Index", "Home")

                        </li>

                        <li>
                            <a href="/Shop">SẢN PHẨM</a>
                            <ul class="sub_menu">
                                @Html.Partial("_LoaiSanPham", Shop.Models.BUS.LoaiSanPhamBUS.DanhSach())
                            </ul>
                        </li>

                        <li>
                            @Html.ActionLink("GIỎ HÀNG", "Index", "GioHang")
                        </li>


                        <li>
                            @Html.ActionLink("GIỚI THIỆU", "Index", "About")
                        </li>

                        <li>
                            @Html.ActionLink("LIÊN HỆ", "Index", "Contact")
                        </li>
                    </ul>
                </nav>
            </div>


            <!-- Header Icon -->
            <div class="header-icons">
                <a href="#" class="header-wrapicon1 dis-block">
                    <img src="~/Asset/images/icons/icon-header-01.png" class="header-icon1" alt="ICON">
                </a>
                @Html.Partial("_LoginPartial")
                <span class="linedivide1"></span>

                <div class="header-wrapicon2">

                    <img src="~/Asset/images/icons/iconfinder_shopping_cart_empty_172552.png" class="header-icon1 js-show-header-dropdown" alt="ICON">
                    <span id="itemCount" class="header-icons-noti item-in-cart">@Model.Count()</span>
                   

                    <!-- Header cart noti -->
                    <div class="header-cart header-dropdown">
                        <ul class="header-cart-wrapitem">
                            @foreach (var item in Model)
                            {

                                <li class="header-cart-item">
                                    <div class="header-cart-item-img">
                                        <img src="~/Asset/images/@item.Hinh" alt="IMG">
                                    </div>

                                    <div class="header-cart-item-txt">
                                        <a href="#" class="header-cart-item-name">
                                            @item.TenSanPham
                                        </a>

                                        <span class="header-cart-item-info">
                                            @item.SoLuong x @item.Gia
                                        </span>
                                    </div>

                                </li>


                            }

                        </ul>
                        @*<div class="header-cart-total">
                            Total: @ViewBag.
                        </div>*@


                        <div class="header-cart-buttons">
                            <div class="header-cart-wrapbtn">
                                <!-- Button -->
                                <a href="/GioHang" class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
                                    XEM GIỎ HÀNG
                                </a>
                            </div>

                            <div class="header-cart-wrapbtn">
                                <!-- Button -->
                                <a href="@Url.Action("index","ThanhToan")" class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
                                    THANH TOÁN
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

  
</header>

