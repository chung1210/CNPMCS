@model PagedList.IPagedList<ShopDegreyConnection.SanPham>
@using PagedList.Mvc;
@{
        ViewBag.Title = "KetQuaTimKiem";
        Layout = "~/Views/Shared/_MainLayout.cshtml";
    }

    <section class="bgwhite p-t-55 p-b-65">
        <div class="container">
            <div class="row">
               

          
                    <!-- Product -->
                    <div class="row">
                        @foreach (var item in Model)
                        {
                           
                            <div class="col-sm-12 col-md-6 col-lg-4 p-b-50">

                                <!-- Block2 -->
                                <div class="block2">

                                    <div class="block2-img wrap-pic-w of-hidden pos-relative">
                                            <img style="max-width:350px;max-height:450px" src="~/Asset/images/@item.Hinh" />
                                    </div>
                                    <div class="block2-btn-addcart w-size1 trans-0-4">

                                    </div>
                                    <div class="block2-txt p-t-20">
                                        <a href="@Url.Action("Details","Shop",new { id= @item.MaSanPham })" class="block2-name dis-block s-text3 p-b-5">
                                            @item.TenSanPham
                                        </a>
                                        <div id="masanpham">Mã sản phẩm: @item.MaSanPham</div>
                                        <span class="block2-price m-text6 p-r-5">
                                            @string.Format("{0:0,000 VNĐ}", Convert.ToDecimal(item.Gia))
                                        </span>
                                    </div>

                                </div>

                            </div>
                        }
                    </div>

                    <!-- Pagination -->

                    <div class="pagination ">
                        @Html.PagedListPager(Model, page => Url.Action("KetQuaTimKiem", "TimKiem", new { page }))
                    </div>

               
            </div>
        </div>
    </section>

