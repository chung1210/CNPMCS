@model IEnumerable<ShopDegreyConnection.GioHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

 
    <!-- Cart -->
    <section class="cart bgwhite p-t-70 p-b-100">
        <div class="container">
            <!-- Cart item -->
            <div class="container-table-cart pos-relative">
                <div class="wrap-table-shopping-cart bgwhite">
                    <table class="table-shopping-cart">

                        <tr class="table-head">
                            <th class="column-1">Sản Phẩm</th>
                            <th></th>
                            <th class="column-2 text-center">Tên Sản Phẩm</th>
                            <th class="column-3 text-center">Giá Tiền</th>
                            <th class="column-4 p-l-70">Số Lượng</th>
                            <th class="column-5 text-center">Tổng Tiền</th>
                        </tr>
                        @foreach (var item in Model) 
                        {
                           
                    <tr class="table-row">

                        <td class="column-1">
                            <div class="cart-img-product b-rad-4 o-f-hidden p-r-50">
                                <img src="~/Asset/images/@item.Hinh" alt="IMG-PRODUCT">
                            </div>
                        </td>
                        @using (Html.BeginForm("CapNhat", "GioHang", FormMethod.Post))
                        {

                            <td >
                                <div>
                                    <input type="hidden" name="masanpham" value="@item.MaSanPham" />
                                    <input type="hidden" name="tensanpham" value="@item.TenSanPham" />
                                    <input type="hidden" name="gia" value="@item.Gia" />
                                </div>
                            </td>
                            @Html.Partial("_GioHang", Shop.Models.BUS.ShopBUS.ChiTiet(item.MaSanPham.ToString()))

                            <td class="column-4 text-center">
                                <input class="size8 m-text18 t-center num-product " type="number" value="@item.SoLuong" min="1" max="1000" name="soluong" />  <input type="submit"  value="Cập Nhật" /> <br />

                            </td>

                            <td class="column-5 text-center"><span>@item.TongTien VNĐ</span></td>
                        }
                        <td>
                            <a href="@Url.Action("Xoa","GioHang",new { masanpham= item.MaSanPham})" class="btn btn-default pull-right">Xóa</a>
                        </td>
                    </tr>

                        }
                    </table>
                </div>

            

                <!-- Total -->
                <div class="bo9 w-size18 p-l-40 p-r-40 p-t-30 p-b-38 m-t-30 m-r-0 m-l-auto p-lr-15-sm">
                    <h5 class="m-text20 p-b-24">
                        ĐƠN HÀNG
                    </h5>

                    <!--  -->
                    @*<div class="flex-w flex-sb-m p-b-12">
                        <span class="s-text18 w-size19 w-full-sm">
                            Subtotal:
                        </span>

                        <span class="m-text21 w-size20 w-full-sm">
                            $39.00
                        </span>
                    </div>*@

                    <!--  -->
                    <div class="flex-w flex-sb bo10 p-t-15 p-b-20">
                        <span class="s-text18 w-size19 w-full-sm">
                           GIAO HÀNG:
                        </span>

                        <div class="w-size20 w-full-sm">
                            <p class="s-text8 p-b-23">
                                (*) Free shipping từ hóa đơn 500.000 VNĐ tại TP.HCM và 1.000.000 VNĐ tại các tỉnh khác.
                            </p>

                          

                          
                            @*<div class="size13 bo4 m-b-22">
                                <input class="sizefull s-text7 p-l-15 p-r-15" type="text" name="postcode" placeholder="Postcode / Zip">
                            </div>*@

                            @*<div class="size14 trans-0-4 m-b-10">
                                
                                <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                                    Update Totals
                                </button>
                            </div>*@
                        </div>
                    </div>

                    <!--  -->
                    <div class="flex-w flex-sb-m p-t-26 p-b-30">
                        <span class="m-text22 w-size19 w-full-sm">
                           TỔNG TIỀN:
                        </span>

                        <span class="m-text21 w-size20 w-full-sm">
                            @ViewBag.TongTien VNĐ
                        </span>
                    </div>

                    <div class="size15 trans-0-4">
                        <!-- Button -->
                       
                            <a href="@Url.Action("index","ThanhToan")" class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">THANH TOÁN</a>
                        
                    </div>
                </div>
            </div>
        </div>
    </section>



 
    <!-- Back to top -->
    <div class="btn-back-to-top bg0-hov" id="myBtn">
        <span class="symbol-btn-back-to-top">
            <i class="fa fa-angle-double-up" aria-hidden="true"></i>
        </span>
    </div>

